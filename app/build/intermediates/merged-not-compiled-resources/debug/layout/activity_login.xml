<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    tools:context="tomaszkopacz.meetbam.view.LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_margin="@dimen/large_margin"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:contentDescription="@string/logo" />

        <Button
            android:id="@+id/sign_in_view_button"
            style="?android:attr/borderlessButtonStyle"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/little_margin"
            android:text="@string/sign_in_view_button"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/colorText"
            android:gravity="center_horizontal"/>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/sign_in_expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_expanded="true"
            app:el_duration="1000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/email_log_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text_size"
                        android:layout_marginBottom="@dimen/little_margin"
                        android:layout_marginTop="@dimen/little_margin"
                        android:layout_marginStart="@dimen/large_margin"
                        android:layout_marginEnd="@dimen/large_margin"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/password_log_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginBottom="@dimen/little_margin"
                        android:layout_marginTop="@dimen/little_margin"
                        android:layout_marginStart="@dimen/large_margin"
                        android:layout_marginEnd="@dimen/large_margin"
                        android:textSize="@dimen/normal_text_size"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/forgot_password_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/little_margin"
                    android:text="@string/forgot_password_button"
                    android:textSize="@dimen/normal_text_size"
                    android:gravity="start"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/sign_in_button"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:text="@string/action_sign_in"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/colorText"/>

                <Button
                    android:id="@+id/fb_login_button"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:background="@color/colorfb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_fb"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/colorText"
                    android:layout_margin="@dimen/normal_margin" />
            </LinearLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>

        <Button
            android:id="@+id/sign_up_view_button"
            style="?android:attr/borderlessButtonStyle"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/little_margin"
            android:text="@string/sign_up_view_button"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/colorText"
            android:gravity="center_horizontal"/>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/sign_up_expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/email_reg_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginBottom="@dimen/little_margin"
                        android:layout_marginTop="@dimen/little_margin"
                        android:layout_marginStart="@dimen/large_margin"
                        android:layout_marginEnd="@dimen/large_margin"
                        android:textSize="@dimen/normal_text_size"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/password_reg_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginBottom="@dimen/little_margin"
                        android:layout_marginTop="@dimen/little_margin"
                        android:layout_marginStart="@dimen/large_margin"
                        android:layout_marginEnd="@dimen/large_margin"
                        android:textSize="@dimen/normal_text_size"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/sign_up_button"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/sign_up_button"
                    android:textColor="@color/colorText"/>

                <Button
                    android:id="@+id/fb_register_button"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:background="@color/colorfb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_fb"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/colorText"
                    android:layout_margin="@dimen/normal_margin" />
            </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
