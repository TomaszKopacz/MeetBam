<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="tomaszkopacz.meetbam.view.MainPhotoFragment"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextureView
            android:id="@+id/photo_textureview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/camera_button"
            android:layout_width="@dimen/footer_height"
            android:layout_height="@dimen/footer_height"
            android:layout_margin="@dimen/footer_margin"
            android:src="@drawable/photo"
            android:background="@android:color/transparent"
            android:layout_gravity="center|bottom"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center|top">

            <TextView
                android:id="@+id/paired_user_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/header_margin"
                android:textSize="@dimen/footer_text_size"
                android:visibility="invisible" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/description_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/description_margin"
                android:visibility="invisible">

                <EditText
                android:id="@+id/decription_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description_hint"
                    android:alpha="0.7"
                    android:textSize="@dimen/description_text_size"
                    android:textColor="@color/colorAccent"
                    android:visibility="invisible"/>
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/photo_imageview"
                android:layout_width="@dimen/photo_width"
                android:layout_height="@dimen/photo_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/photo_margin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_height"
            android:orientation="horizontal"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:layout_margin="@dimen/footer_margin">

            <ImageButton
                android:id="@+id/dismiss_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/footer_item_margin"
                android:src="@drawable/delete"
                android:alpha="0.7"
                android:background="@drawable/button_delete"
                android:visibility="invisible"
                android:padding="@dimen/footer_item_padding"/>

            <ImageButton
                android:id="@+id/pair_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/footer_item_margin"
                android:visibility="invisible"
                android:background="@drawable/button_pair"
                android:src="@drawable/pair"
                android:alpha="0.7"
                android:padding="@dimen/footer_item_padding"/>

            <ImageButton
                android:id="@+id/accept_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/footer_item_margin"
                android:visibility="gone"
                android:alpha="0.7"
                android:background="@drawable/button_accept"
                android:src="@drawable/accept"
                android:padding="@dimen/footer_item_padding" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
